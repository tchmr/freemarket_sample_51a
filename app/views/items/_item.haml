.item
  .item__title
    %h2 商品の情報を入力
  = form_for @item do |f|
    .item__img
      %ul
        %li
          %h3 出品画像
        %li
          .required__icon 必須
      .clearfix
      %p 最大10枚までアップロードできます

      = f.fields_for :item_images, @item.item_images do |image|
        .item__img__dropzone.clearfix
          #preview
          -# １〜５枚目プレビュー表示
          .item__img__dropzone__input
            = image.label :image, for: "upload-image" do
              .input-area
                = image.file_field :image_url, id: "upload-image", class: "upload-image", 'data-image': 0
              .item__img__dropzone__input__description
                .item__img__dropzone__input__description__text
                  ドラッグアンドドロップ
                  %br
                  またはクリックしてファイルをアップロード

        .item__img__dropzone2.clearfix
          #preview2
          -# ６〜１０枚目プレビュー表示
          .item__img__dropzone2__input2
            = image.label :image, for: "upload-image" do
              .input-area
                = image.file_field :image_url, id: "upload-image", class: "upload-image", 'data-image': 0
              .item__img__dropzone2__input2__description
                .item__img__dropzone2__input2__description__text
                  ドラッグアンドドロップ
                  %br
                  またはクリックしてファイルをアップロード

    .item__info
      .item__info_name
      %ul
        %li
          %h3 商品名
        %li
          .required__icon 必須
        .clearfix
        = f.text_field :name, class: 'text_field', placeholder: "商品名（必須 40文字まで）"

      .item__info_text
      %ul
        %li
          %h3 商品の説明
        %li
          .required__icon 必須
        .clearfix
        = f.text_area :text, placeholder: '商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）例) 2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。', size:"71x6",class: 'text_area'

    .item__detail
      %h3.light_color 商品詳細

      .clearfix
      .item__detail__form_box
        .item__detail__form_box__category
          %ul
            %li
              %h3 カテゴリー
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = select_tag "category", options_for_select({'---':'---','レディース':'1','メンズ':'2','ベビー・キッズ':'3','インテリア・住まい・小物':'4','本・音楽・ゲーム':'5','おもちゃ・ホビー・グッズ':'6','コスメ・香水・美容':'7','家電・スマホ・カメラ':'8','スポーツ・レジャー':'9','ハンドメイド':'10','チケット':'11','自転車・オートバイ':'12','その他':'13'}), class: "select_tag parent_id", id: "item_category_id"

            = fa_icon 'chevron-down', class:'fa_icon'

          .select-wrap
            = select_tag "category" , options_for_select({'---':'---'}), class: "select_tag child_id", id: "item_category_id"

            = fa_icon 'chevron-down', class:'fa_icon'

          .select-wrap
            = f.select :category_id, options_for_select({'---':'---'}),{} ,{class: "select_tag grandchild_id", id: "item_category_id"}

            = fa_icon 'chevron-down', class:'fa_icon'

        .item__detail__form_box__size
          %ul
            %li
              %h3 サイズ
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = f.select :size_id, options_for_select({'---':'---','XXS以下':'1','XS(SS)':'2','S':'3','M':'4','L':'5','XL(LL)':'6','2XL(3L)':'7','3XL(4L)':'8','4XL(5L)以上':'9','FREE SIZE':'10'}), {},{class: "select_tag size_id", id: "item_size_id"}

            = fa_icon 'chevron-down', class:'fa_icon'

        .item__detail__form_box__brand
          %ul
            %li
              %h3 ブランド
            %li
              .optional__icon 任意
          .clearfix
          .select-wrap
            = f.text_field :brand_id, class: 'text_field', placeholder: "例） シャネル"

        .item__detail__form_box__condition
          %ul
            %li
              %h3 商品の状態
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = f.select :condition, options_for_select({'---':'---','新品、未使用':'新品、未使用','未使用に近い':'未使用に近い','目立った傷や汚れなし':'目立った傷や汚れなし','やや傷や汚れあり':'やや傷や汚れあり','傷や汚れあり':'傷や汚れあり','全体的に状態が悪い':'全体的に状態が悪い'}), class: "select_tag", id: "item_condition"
            = fa_icon 'chevron-down', class:'fa_icon'

    .delivery-fee
      %h3.light_color 配送について
      %span.icon_question ?

      .clearfix
      .delivery-fee__form_box
        .delivery-fee-payer
          %ul
            %li
              %h3 配送料の負担
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = f.select :delivery_fee_payer, options_for_select({'---':'---','送料込み（出品者負担）':'送料込み（出品者負担）','着払い（購入者負担）':'着払い（購入者負担）'}), {},{class: "select_tag delivery_fee_payer", id: "item_delivery_fee_payer"}
            = fa_icon 'chevron-down', class:'fa_icon'

        .root-of-delivery_type-for-css
          .delivery-type
            %ul
              %li
                %h3 配送の方法
              %li
                .required__icon 必須
            .clearfix
            .select-wrap
              = f.select :delivery_type, options_for_select({'---':'---','未定':'未定','らくらくメルカリ便':'らくらくメルカリ便','ゆうメール':'ゆうメール','レターパック':'レターパック','普通郵便(定形、定形外)':'普通郵便(定形、定形外)','クロネコヤマト':'クロネコヤマト','ゆうパック':'ゆうパック','クリックポスト':'クリックポスト','ゆうパケット':'ゆうパケット'}), {}, id: "item_delivery_type"
              = fa_icon 'chevron-down', class:'fa_icon'

        .delivery-from-area
          %ul
            %li
              %h3 発送元の地域
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = f.select :delibery_from_area, options_for_select({'---':'---','北海道':'北海道','青森県':'青森県','岩手県':'岩手県','宮城県':'宮城県','秋田県':'秋田県','山形県':'山形県','福島県':'福島県','東京都':'東京都','神奈川県':'神奈川県','埼玉県':'埼玉県','千葉県':'千葉県','茨城県':'茨城県','栃木県':'栃木県','群馬県':'群馬県','山梨県':'山梨県','新潟県':'新潟県','長野県':'長野県','富山県':'富山県','石川県':'石川県','福井県':'福井県','愛知県':'愛知県','岐阜県':'岐阜県','静岡県':'静岡県','三重県':'三重県','大阪府':'大阪府','兵庫県':'兵庫県','京都府':'京都府','滋賀県':'滋賀県','奈良県':'奈良県','和歌山県':'和歌山県','鳥取県':'鳥取県','島根県':'島根県','岡山県':'岡山県','広島県':'広島県','山口県':'山口県','徳島県':'徳島県','香川県':'香川県','愛媛県':'愛媛県','高知県':'高知県','福岡県':'福岡県','佐賀県':'佐賀県','長崎県':'長崎県','熊本県':'熊本県','大分県':'大分県','宮崎県':'宮崎県','鹿児島県':'鹿児島県','沖縄県':'沖縄県'}),class: 'select-tag', id: "item_delibery_from_area"

            -# できればこっち使いたい
            -# = form_tag new_item_path, method: :get, class: 'select_tag_2' do
            -#   .input-append
            -#     = collection_select :id, :prefecture_id, Prefecture.all, :id, :name

            = fa_icon 'chevron-down', class:'fa_icon'

        .delivery-days
          %ul
            %li
              %h3 発送までの日数
            %li
              .required__icon 必須
          .clearfix
          .select-wrap
            = f.select :delivery_days, options_for_select({'---':'---','1~2日で発送':'1~2日で発送','2~3日で発送':'2~3日で発送','4~7日で発送':'4~7日で発送'}),class: 'select_tag', id: "item_category_id"
            = fa_icon 'chevron-down', class:'fa_icon'

    .sell-price
      %h3.light_color 販売価格(300〜9,999,999)
      %span.icon_question ?
      .clearfix
      .sell-price__form_box
        .sell__fee
          %ul
            %li
              %h3 価格
            %li
              .required__icon 必須
            %li.yen ¥
            %li.price_tag
              = f.text_field :price, placeholder: '例) 300',class: 'sell-price__text_area_2'
              .clearfix
            %br
            %br
            %br
        .line
          %p.fee
            販売手数料 (10%)
          = text_field_tag :content, '-', class: 'sell-price__text_area_3 mercari-share'

        .sell-price__profit
          %h3.profit
            販売利益
          = text_field_tag :content, '-',class: 'sell-price__text_area_3 seller-share'
    .sell-btn
      .dscription
        %span 禁止されている出品
        %p、
        %span 行為
        %p を必ずご確認ください。
        %p またブランド品でシリアルナンバー等がある場合はご記載ください。
        %span 偽ブランドの販売
        %p は犯罪であり処罰される可能性があります。
        %p また、出品をもちまして
        %span 加盟店規約
        %p に同意したことになります。
      = f.submit "出品する", class: "redbtn"
      .clearfix
      .sell-btn__return
        %p もどる

= render 'item_footer'

