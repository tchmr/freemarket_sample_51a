.top
  / Slider main container
  .swiper-container
    / Additional required wrapper
    .swiper-wrapper
      / Slides
      .swiper-slide.camp-slide
      .swiper-slide.natsukashi-slide
      .swiper-slide.mercari-info-slide
        .mercari-info-slide__content
          = image_tag "banner-mercari-info-hand-phone.png", width: "390", height: "390"  ,class:"hand-phone"
          .mercari-info-slide__content__left
            .mercari-info-slide__content__left__title
              スマホでかんたん
              %br/
              フリマアプリ
            .mercari-info-slide__content__left__content
              メルカリはスマホカメラからすぐに出品できる
              %br/
              購入時も安心な独自システムのアプリです
              %br/
              %br/
        = image_tag "banner-mercari-info-apple.svg", width: "128", height: "39"  ,class:"banner-mercari-info-hand-phone"
        = image_tag "banner-mercari-info-google-play.svg", width: "128", height: "39"  ,class:"banner-mercari-info-hand-phone"
    .swiper-pagination
    .swiper-button-prev
    .swiper-button-next

  .pickup-categories
    .pickup-categories__title ピックアップカテゴリー

    .pickup-category
      = link_to 'レディース 新着アイテム(signin)',sign_in_path,class:'pickup-category__title'
      .item-box.clearfix
        - @redies_items.each do |item|
          .item
            - item_image = item.item_images.first.image_url
            = link_to item_path(item.id), data: {turbolinks: false} do
              = image_tag "#{item_image}", width: "213", height: "213"  ,class:"banner-mercari-info-hand-phone"
            .item__lower
              .item__lower__name
                = item.name
              .item__lower__price
                ¥
                = item.price
              .item__lower__tax (税込)
      = link_to ' すべての商品を見る',"#",class:'pickup-category__show-all'

