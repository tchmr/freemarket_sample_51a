.credit
  .credit__title
    %h2 支払い方法
  .credit__box_list
    %p クレジットカード一覧
    - if @default_card_information
      .credit__btn_add
        = form_tag("/users/#{current_user.id}/cards/#{@card.id}", method: :delete, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button{class: 'redbtn'} 削除する
    - else
      .credit__btn_add
        = fa_icon 'credit-card', class:'credit-card'
        = link_to "クレジットカードを追加する", add_user_cards_path(current_user) , class:'credit_card',  data: {turbolinks: false}
  .box__bottom_line
  .credit__box_link
    %li
      %p 支払い方法について
    %li
      = fa_icon 'chevron-right', class:'arrow_blue'
